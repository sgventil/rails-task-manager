<div class="container mt-5">
  <h1>New Task</h1>

  <%= form_for(@task) do |f|%>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.label :completed, 'Completed' %>
  <%= f.check_box :completed %>
  <%= f.submit %>
  <% end %>

  <%= link_to "Back to Tasks", tasks_path %>
  </div>
